@using MarialaTemplate.Areas.MarialaAdmin.ViewModels
@model List<Employee>
@{
    int count = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div azik class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Employee Table</h4>
                        <a class="btn btn-success" asp-action="Create" asp-controller="Employee" asp-area="MarialaAdmin">Create</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                           Name
                                        </th>
                                        <th>
                                            Profession
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>
                                                @count;
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                               @item.Profession
                                            </td>
                                            <td class="py-1">
                                                <img src="~/assets/images/@item.Image" alt="image" />
                                            </td>
                                            <td>
                                               <a class="btn btn-warning" asp-action="Update" asp-controller="Employee" asp-area="MarialaAdmin" asp-route-id="@item.Id">Update</a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-controller="Employee" asp-area="MarialaAdmin" asp-route-id="@item.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

