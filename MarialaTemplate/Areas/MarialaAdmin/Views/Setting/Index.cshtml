@using MarialaTemplate.Areas.MarialaAdmin.ViewModels
@model List<Setting>
@{
    int count = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div azik class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Employee Table</h4>
                        <a class="btn btn-success" asp-action="Create" asp-controller="Setting" asp-area="MarialaAdmin">Create</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Value
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>
                                                @count;
                                            </td>
                                           
                                            <td>
                                                @item.Value
                                            </td>
                                            <td>
                                                <a class="btn btn-warning" asp-action="Update" asp-controller="Setting" asp-area="MarialaAdmin" asp-route-id="@item.Id">Update</a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-controller="Setting" asp-area="MarialaAdmin" asp-route-id="@item.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

